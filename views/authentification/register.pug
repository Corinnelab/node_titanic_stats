extends ../layouts/main.pug

block  content

    form.ui.large.form(action='/register' method='post')
        .ui.stacked.segment
            .field
            .ui.left.icon.input
                i.user.icon
                input(type='text' name='firstName' placeholder='firstName' value="")
            .field
            .ui.left.icon.input
                i.user.icon
                input(type='text' name='lastName' placeholder='lastName' value="")
            .field
            .ui.left.icon.input
                i.user.icon
                input(type='text' name='email' placeholder='E-mail address' value="")
            .field
            .ui.left.icon.input
                i.lock.icon
                input(type='password' name='password' placeholder='Password')
            .ui.left.icon.input
                i.lock.icon
                input(type='password' name='passwordConfirm' placeholder='passwordConfirm')
        button.ui.fluid.large.teal.submit.button(type='submit') S'enregistrer

        a(href='/auth/login') Déjà un compte ? Se connecter
